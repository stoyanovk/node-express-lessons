<div style="margin-top:20px" class="row">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s6"><a class="active" href="#login">Sign in</a></li>
            <li class="tab col s6"><a href="#register">Sign up</a></li>
        </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
        <h2>Sing in</h1>
            {{#if loginErr}}
            {{loginErr}}
            {{/if}}
            <form action="/auth/login" method="post" class="p-3">
                <div class="row">
                    <div class="input-field col s12">
                        <input placeholder="email" value="lol@kek.com" id="first_name" type="email" name="email"
                            class="validate">
                        <label for="first_name">email</label>
                    </div>
                    <div class="input-field col s12">
                        <input id="last_name" type="password" value="123456" class="validate" name="password">
                        <label for="last_name">password</label>
                    </div>
                    <input type="hidden" name="_csrf" value="{{csurf}}">
                    <button class="btn waves-effect waves-light" type="submit">
                        Submit
                    </button>
                </div>
            </form>
    </div>
    <div id="register" class="col s6 offset-s3">
        <h2>Sing up</h1>
            {{#if registerErr}}
            {{registerErr}}
            {{/if}}
            <form action="/auth/register" method="post" class="p-3">
                <div class="row">
                    <div class="input-field col s12">
                        <input placeholder="email" value="lo@kek.com" id="first_name" type="email" name="email"
                            class="validate">
                        <label for="first_name">email</label>
                    </div>
                    <div class="input-field col s12">
                        <input id="last_name" type="text" value="user" class="validate" name="name">
                        <label for="last_name">name</label>
                    </div>
                    <div class="input-field col s12">
                        <input id="last_name" type="password" value="123456" class="validate" name="password">
                        <label for="last_name">password</label>
                    </div>
                    <div class="input-field col s12">
                        <input id="last_name" type="password" value="123456" class="validate" name="copypassword">
                        <label for="last_name">password</label>
                    </div>
                    <input type="hidden" name="_csrf" value="{{csurf}}">
                    <button class="btn waves-effect waves-light" type="submit">
                        Submit
                    </button>
                </div>
            </form>
    </div>
</div>