<div style="margin-top:20px" class="row">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s6"><a class="active" href="#test1">Sign in</a></li>
            <li class="tab col s6"><a href="#test2">Sign up</a></li>
        </ul>
    </div>
    <div id="test1" class="col s6 offset-s3">
        <h2>Sing in</h1>
            <form action="/auth/login" method="post" class="p-3">
                <div class="row">
                    <div class="input-field col s12">
                        <input placeholder="email" value="lo@kek.com" id="first_name" type="email" name="email"
                            class="validate">
                        <label for="first_name">email</label>
                    </div>
                    <div class="input-field col s12">
                        <input id="last_name" type="password" value="123456" class="validate" name="password">
                        <label for="last_name">password</label>
                    </div>
                    <button class="btn waves-effect waves-light" type="submit">
                        Submit
                    </button>
                </div>
            </form>
    </div>
    <div id="test2" class="col s6 offset-s3">
        <h2>Sing up</h1>
            <form action="/auth/register" method="post" class="p-3">
                <div class="row">
                    <div class="input-field col s12">
                        <input placeholder="email" value="lo@kek.com" id="first_name" type="email" name="email"
                            class="validate">
                        <label for="first_name">email</label>
                    </div>
                    <div class="input-field col s12">
                        <input id="last_name" type="password" value="123456" class="validate" name="password">
                        <label for="last_name">password</label>
                    </div>
                    <div class="input-field col s12">
                        <input id="last_name" type="password" value="123456" class="validate" name="copypassword">
                        <label for="last_name">password</label>
                    </div>
                    <button class="btn waves-effect waves-light" type="submit">
                        Submit
                    </button>
                </div>
            </form>
    </div>
</div>